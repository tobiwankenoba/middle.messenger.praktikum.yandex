.avatar-block {
  margin-bottom: var(--unit-12);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--unit-5);
}

.avatar {
  width: 130px;
  height: 130px;
  cursor: pointer;
  background-color: var(--gray-90);
  border-radius: 180px;
}

.avatar-title {
  font-size: var(--font-size-16);
  line-height: var(--line-height-16);
  color: var(--black-100);
}
