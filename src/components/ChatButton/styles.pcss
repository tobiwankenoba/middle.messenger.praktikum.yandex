.button-icon {
  padding: 5px;
  cursor: pointer;
  background: transparent;
  border: 0.5px solid black;
  border-radius: 5px;
  opacity: 0.5;
  &:hover {
    opacity: 1;
  }
}

.trash-icon {
  width: 16px;
  height: 16px;
  background: no-repeat center center / contain url("../../assets/trash.svg");
}
